# {{ ansible_managed }}

[Unit]
Description={{ daemon_description }}
After=network.target

[Service]
Type=simple
User={{ username }}
ExecStart={{ chain_bin }} --config {{ chain_config_path }} {{ chain_bin_flags }}
Restart=on-failure
RestartSec=3
LimitNOFILE=65535

[Install]
WantedBy=multi-user.target
